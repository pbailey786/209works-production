# ====================
# 209JOBS ENVIRONMENT VARIABLES
# ====================
# Copy this file to .env and fill in your actual values
# Never commit your .env file to version control!

# ====================
# DATABASE
# ====================
DATABASE_URL="postgresql://user:password@localhost:5432/209jobs_dev"

# ====================
# NEXT.JS
# ====================
NODE_ENV="development"
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# ====================
# AUTHENTICATION
# ====================
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# ====================
# AI SERVICES
# ====================
OPENAI_API_KEY="sk-your-openai-api-key"
PERPLEXITY_API_KEY="pplx-your-perplexity-key"

# ====================
# EMAIL SERVICE
# ====================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"

# ====================
# FILE STORAGE
# ====================
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_S3_BUCKET_NAME="209jobs-uploads"

# ====================
# EMAIL CONFIGURATION
# ====================
RESEND_API_KEY="your-resend-api-key"
RESEND_EMAIL_FROM="209.works <noreply@209.works>"

# ====================
# PAYMENT PROCESSING
# ====================
STRIPE_PUBLIC_KEY="pk_test_your-stripe-public-key"
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"

# ====================
# SECURITY
# ====================
ENCRYPTION_KEY="your-32-byte-base64-encryption-key"
JWT_SECRET="your-jwt-secret-at-least-32-characters-long"
SESSION_SECRET="your-session-secret-at-least-32-characters-long"
API_KEY_SALT="your-api-key-salt-at-least-16-characters"

# ====================
# REDIS/CACHING
# ====================
UPSTASH_REDIS_REST_URL="your-upstash-redis-url"
UPSTASH_REDIS_REST_TOKEN="your-upstash-redis-token"

# ====================
# SECURITY CONFIGURATION
# ====================
SECURITY_HEADERS_ENABLED="true"
CSRF_PROTECTION_ENABLED="true"
RATE_LIMIT_ENABLED="true"
SESSION_TIMEOUT_MINUTES="30"
MAX_LOGIN_ATTEMPTS="5"
LOCKOUT_DURATION_MINUTES="15"
REQUIRE_2FA_FOR_ADMIN="true"
AUDIT_LOG_ENABLED="true"

# ====================
# OPTIONAL DEVELOPMENT FLAGS
# ====================
SKIP_RATE_LIMIT="false"
LOG_LEVEL="info"
SLOW_REQUEST_THRESHOLD="1000"
ENABLE_PERFORMANCE_LOGGING="true"
ENABLE_SECURITY_HEADERS="true"